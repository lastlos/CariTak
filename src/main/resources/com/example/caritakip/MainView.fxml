<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.caritakip.MainController">
    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="400.0" prefWidth="600.0">
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="Cari Hesaplar" style="-fx-font-weight: bold;"/>
                <TableView fx:id="cariTable">
                    <columns>
                        <TableColumn fx:id="adSoyadColumn" prefWidth="150.0" text="Ad Soyad"/>
                        <TableColumn fx:id="firmaAdiColumn" prefWidth="150.0" text="Firma Adı"/>
                        <TableColumn fx:id="telefonColumn" prefWidth="100.0" text="Telefon"/>
                        <TableColumn fx:id="bakiyeColumn" prefWidth="100.0" text="Bakiye"/>
                    </columns>
                </TableView>
                <HBox alignment="CENTER" spacing="10">
                    <Button onAction="#handleNewCari" text="Yeni Cari"/>
                    <Button onAction="#handleEditCari" text="Cariyi Düzenle"/>
                    <Button onAction="#handleDeleteCari" text="Cariyi Sil"/>
                </HBox>
            </VBox>
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="Cari Hareketleri" style="-fx-font-weight: bold;"/>
                <TableView fx:id="hareketTable">
                    <columns>
                        <TableColumn fx:id="tarihColumn" prefWidth="100.0" text="Tarih"/>
                        <TableColumn fx:id="aciklamaColumn" prefWidth="250.0" text="Açıklama"/>
                        <TableColumn fx:id="borcColumn" prefWidth="100.0" text="Borç"/>
                        <TableColumn fx:id="alacakColumn" prefWidth="100.0" text="Alacak"/>
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button onAction="#handleNewHareket" text="Yeni İşlem Ekle"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
